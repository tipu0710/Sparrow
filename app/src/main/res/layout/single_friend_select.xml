<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic_single_select"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_face_black_48dp" />

    <TextView
        android:id="@+id/user_single_name_single_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_pic_single_select"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/profile_pic_single_select"
        android:layout_toRightOf="@+id/profile_pic_single_select"
        android:text="User Name"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/user_single_status_single_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/user_single_name_single_select"
        android:layout_alignLeft="@id/user_single_name_single_select"
        android:layout_below="@id/user_single_name_single_select"
        android:layout_marginTop="10dp"
        android:text="@string/default_status" />

    <ImageView
        android:id="@+id/user_single_online_icon_single_select"
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/user_single_name_single_select"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/user_single_name_single_select"
        android:layout_toRightOf="@id/user_single_name_single_select"
        android:visibility="invisible"
        app:srcCompat="@drawable/online_icon" />

</RelativeLayout>